<link rel="stylesheet" href="/styles.css">

<h1>My Snippets</h1>

<div class="welcome">
<nav class="navigation">
    <a class="button" href="/">Home</a>
    <a class="button" href="/addsnippet">New Snippet</a>
    <a href="/logout">Logout</a>
</nav>
</div>

<table class="snippet_table" border="1">
  <tr>
    <th>
      Title
    </th>
    <th>
      Date
    </th>
    <th>
      Language
    </th>
    <th>
      Body
    </th>
    <th>
      Notes
    </th>
    <th>
      Tags
    </th>
    <th>
      Delete
    </th>
  </tr>
</br>

  {{#snippet}}
  <tr>
    <td><a href="/addSnippet?id={{_id}}">{{title}}</a></td>
    <td>{{date}}</td>
    <td>{{language}}</td>
    <td>{{body}}</td>
    <td>{{notes}}</td>
    <td>{{tags}}</td>
    <td><a href="/deleteSnippet/?id={{_id}}">Delete</a></td>
  </tr>
  {{/snippet}}

</table>
