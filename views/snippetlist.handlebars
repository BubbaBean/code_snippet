<link rel="stylesheet" href="/styles.css">

<header class="header_bar">

  <img class="logo_image" src="/FullSizeRender.jpg" alt="code monkey logo">

  <nav class="navigation">
      <a class="button" href="/">Profile</a>
      <a class="button" href="/snippetlist">My Tasks</a>
      <a class="button" href="/addsnippet">New Task</a>
      <a href="/logout">Logout</a>

  </nav>
</header>

<h1>My Tasks</h1>

<form class="search_form" action="/search" method="get">
  <input class="search" type="text" name="snippets">
  <button id="search_button">Search</button>
</form>

<div class="welcome">

    <a class="button" href="/addsnippet">New Task</a>

</div>

<table class="snippet_table" border="1">
  <tr>
    <th>
      Title
    </th>
    <th>
      Date
    </th>
    <th>
      Language
    </th>
    <th>
      Body
    </th>
    <th>
      Notes
    </th>
    <th>
      Tags
    </th>
    <th>
      Delete
    </th>
  </tr>
</br>

  {{#snippet}}
  <tr>
    <td><a href="/addSnippet?id={{_id}}">{{title}}</a></td>
    <td>{{date}}</td>
    <td>{{language}}</td>
    <td>{{body}}</td>
    <td>{{notes}}</td>
    <td>{{tags}}</td>
    <td><a href="/deleteSnippet/?id={{_id}}">Delete</a></td>
  </tr>
  {{/snippet}}

</table>
